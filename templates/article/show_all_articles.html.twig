{% extends 'base.html.twig' %}

{% block title %}
    Magasin
        
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success m-4">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{path("create_article")}}" class="btn btn-primary m-3">
        Create new article
    </a>

    <div class="count mt-2">
        Il y au total 
                
        {{ articles.getTotalItemCount }}
        paire de chaussures
            
    </div>

    <div class="table mt-3">
        {% if articles is not empty %}
            {% for article in articles %}
                {% if loop.first %}
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">
                                    NAME
                                </th>
                                <th>
                                    DESCRIPTION
                                </th>
                                <th>
                                    PRICE
                                </th>
                                <th>
                                    NUMBER IN STOCK
                                </th>
                                <th>
                                    CREATE AT
                                </th>
                                <th>CATEGORY
                                </th>
                                <th>MODIFIER</th>
                                <th>
                                    SUPPRIMIER
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% endif %}
                        <tr scope="row">
                            <td>
                                {{ article.name }}
                            </td>
                            <td>
                                {{ article.description }}
                            </td>
                            <td>
                                {{ article.price }}
                            </td>
                            <td>
                                {{ article.nombresAvailable }}
                            </td>
                            <td>
                                {{ article.createAt|date('d-m-Y') }}
                            </td>

                            <td>
                                {{ article.category.name}}
                            </td>
                            
                            <td>
                                <a class="btn btn-warning" href={{ path('edit_article',{id:article.id})}}>
                                    Modify
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href={{path('delete_article',{id:article.id})}} 
                                onclick="return confirm('Ãªtes-vous sur ?')">
                                    Remove 
                                </a>
                            </td>
                        </tr>
                        
                        {% if loop.last %}
                        </tbody>
                    </table>
                    <div class="navigation d-flex justify-content-center">
                        {{ knp_pagination_render(articles) }}
                    </div>
                {% endif %}

            {% endfor %}
        {% else %}
            Stock empty
        {% endif %}
    </div>

{% endblock %}
